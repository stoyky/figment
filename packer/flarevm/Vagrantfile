Vagrant.configure("2") do |config|
  # FLARE VM
  config.vm.define "flarevm" do |flarevm|
    flarevm.vm.box = "flarevm"
    flarevm.vm.hostname = "flarevm"
    flarevm.vm.guest = :windows
    flarevm.vm.communicator = "none"

    flarevm.vm.synced_folder '.', '/vagrant', disabled: true

    flarevm.vm.provider "vmware_desktop" do |vp|
      vp.vmx["ethernet0.present"] = "TRUE"
      vp.vmx["ethernet0.virtualDev"] = "e1000"
      vp.vmx["ethernet0.connectionType"] = "hostonly"
      vp.vmx["ethernet0.startConnected"] = "TRUE"
      vp.vmx["ethernet0.addressType"] = "generated"
      vp.vmx["ethernet0.pciSlotNumber"] = "33"
      vp.memory = "4096"
      vp.gui    = true
      vp.ssh_info_public = true
    end
  end
end
